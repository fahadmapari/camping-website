<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1><strong>KnowLocal</strong></h1>
      <p>
        <strong>
          Never be bored in an unknown locality, find out most happening places
          near you!
        </strong>
      </p>
      <p>
        <a href="/campgrounds/new" class="btn jumbobtn btn-lg"
          >Add new a place</a
        >
      </p>
    </div>
  </header>
  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(campground){ %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%= campground.image %>" height="100%" />
        <div class="campground-list">
          <div class="caption">
            <h3><%= campground.name %></h3>
          </div>
          <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"
            >Know More</a
          >
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</div>
<% include ../partials/footer %>
